{
  "settings": {
    "analysis": {
      "analyzer": {
        "arabic_analyzer": {
          "type": "arabic"
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "productCode": { "type": "keyword" },
      "primaryImage": { "type": "keyword" },
      "alternateImage": { "type": "keyword" },
      "alternateGalleryImages": { "type": "keyword" },

      "name": {
        "type": "text",
        "fields": {
          "keyword": { "type": "keyword", "ignore_above": 256 }
        }
      },

      "name_ar": {
        "type": "text",
        "analyzer": "arabic_analyzer",
        "fields": {
          "keyword": { "type": "keyword", "ignore_above": 256 }
        }
      },

      "description_ar": {
        "type": "text",
        "analyzer": "arabic_analyzer"
      },

      "department": { "type": "keyword" },
      "subDepartment": { "type": "keyword" },

      "editorialDescription": { "type": "text" },
      "detailParts": { "type": "text" },
      "materials": { "type": "text" },
      "lineName": { "type": "keyword" },
      "variant": { "type": "keyword" },
      "colors": { "type": "keyword" },

      "price": {
        "type": "object",
        "properties": {
          "country": { "type": "keyword" },
          "currency": { "type": "keyword" },
          "isTaxExcluded": { "type": "boolean" },
          "lastFullPrice": { "type": "float", "null_value": null },
          "price": { "type": "float" },
          "priceList": { "type": "keyword" },
          "styleCode": { "type": "keyword" },
          "validFrom": { "type": "date", "format": "yyyy-MM-dd||strict_date_optional_time" }
        }
      },

      "rawPrice": { "type": "float" },

      "season": { "type": "keyword" },
      "seasonDescription": { "type": "text" },

      "genders": { "type": "keyword" },

      "prices": {
        "type": "nested",
        "properties": {
          "country": { "type": "keyword" },
          "lastFullPrice": { "type": "float", "null_value": null },
          "price": { "type": "float" },
          "isTaxExcluded": { "type": "boolean" },
          "currency": { "type": "keyword" },
          "validFrom": { "type": "date", "format": "yyyy-MM-dd||strict_date_optional_time" },
          "styleCode": { "type": "keyword" },
          "priceList": { "type": "keyword" }
        }
      },

      "translations": { "type": "object", "enabled": false },

      "exotic": { "type": "boolean" },

      "images": { "type": "keyword" },
      "madeIn": { "type": "keyword" },

      "lastUpdated": {
        "type": "date",
        "format": "strict_date_optional_time||yyyy-MM-dd||yyyy-MM-dd HH:mm:ss||epoch_millis"
      },

      "productLink": { "type": "keyword", "index": false },

      "categoryPath": { "type": "keyword" },

      "materialCare": { "type": "text" },

      "variants": {
        "type": "nested",
        "properties": {
          "variantCode": { "type": "keyword" },
          "variantName": { "type": "text" },
          "attributes": { "type": "object", "enabled": false }
        }
      },

      "sustainabilityFeatures": { "type": "text" }
    }
  }
}
